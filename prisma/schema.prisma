generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  rut         String  @id @unique
  names       String
  lastNames   String
  email       String  @unique
  password    String?
  role        String
  departments String
  directions  String
  jobNumber   String
  contact     String
}

model Directions {
  id      String @id @unique
  name    String
  address String
}

model Departments {
  id   String @id @unique
  name String @unique
}

model Logs {
  logId       String @id @unique
  userId      String
  endpoint    String
  method      String
  statusCode  Int
  description String
  date        DateTime
}

model BlackList {
  id         String   @id @unique
  token      String
  expiration DateTime
}
